Screen:
    id: vehicleshop_screen
    name: 'vehicle_shop_screen'
    MDCard:
        size_hint: 1, 1
        orientation: 'vertical'

        BoxLayout:
            id: baselayout
            orientation: 'vertical'
            size_hint: 1, 1

            BoxLayout:
                id: container
                orientation: 'horizontal'
                size_hint: 1, 1

                BoxLayout:
                    id: first_layout_container
                    size_hint: 0.7, 1
                    orientation: 'vertical'
                    padding: 10
                    
                    BoxLayout:
                        id: first_box_layout
                        size_hint: 1, 0.5
                        orientation: 'horizontal'
                        padding: 10

                    BoxLayout:
                        id: second_box_layout
                        size_hint: 1, 0.5
                        orientation: 'horizontal'
                        padding: 10
                
                MDBoxLayout: 
                    orientation: 'vertical'
                    size_hint: 0.3, 1
                    padding: 20
                    spacing: 20

                    # BoxLayout:
