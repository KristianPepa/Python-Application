                    #     # padding: dp(20) 

                    MDCard:
                        id: button_layout
                        orientation: 'vertical'
                        elevation: 1
                        size_hint: 1, 0.1
                        spacing: 20
                        
                        BoxLayout:
                            orientation: 'horizontal'
                            size: .5, .5
                            padding: 0,0,0,3
                            size_hint_y : None
                            size_hint_x : None
                            pos_hint:{"right":0.1}

                            Button:
                                id: add_button
                                text: "Add"
                                size_hint: None, None
                                size: 100, 50
                                background_color: 0, 0.9, 0.9, 1
                                on_release: app.add_order()
                            
                            Button:
                                id: order_button
                                text: "Order"
                                size_hint: None, None
                                size: 100, 50
                                background_color: 0, 0.9, 0.9, 1
                                on_release: app.calculate_amount()

                            Button:
                                id: refresh_button
                                text: "Refresh"
                                size_hint: None, None
                                size: 100, 50
                                background_color: 0.682, 0.659, 0.827, 1
                                on_release: app.app_refresh()


                    MDCard:
                        orientation: 'vertical'
                        elevation: 1
                        padding: "16dp"
                        size_hint: None, None
                        size: "370dp", "570dp"

                        MDLabel:
                            id: invoice
